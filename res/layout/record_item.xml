<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_record_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_74dp" >
        
        <ImageView 
            android:id="@+id/iv_record_call_type"
            android:layout_width="@dimen/common_measure_30dp"
            android:layout_height="@dimen/common_measure_30dp"
            android:layout_marginTop="@dimen/common_measure_25dp"
            android:layout_marginLeft="@dimen/common_measure_15dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/missed_call"
            />

        <TextView
            android:id="@+id/tv_record_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_50dp"
            android:layout_marginTop="@dimen/common_measure_9dp"
            android:text="小青"
            android:textColor="#000000"
            android:textSize="@dimen/common_measure_28sp" />

        <TextView
            android:id="@+id/tv_record_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_record_item_name"
            android:layout_marginLeft="@dimen/common_measure_55dp"
            android:text="移动"
            android:textColor="#343434"
            android:textSize="@dimen/common_measure_19sp" />
		
        <LinearLayout
            android:id="@+id/ll_record_item_details"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_measure_50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/common_measure_10dp"
            android:contentDescription="通话详情"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/common_measure_18dp"
            android:clickable="true"
            android:paddingRight="@dimen/common_measure_18dp" >

            <ImageView
                android:id="@+id/iv_details_clicked"
                android:layout_width="@dimen/common_measure_34dp"
                android:layout_height="@dimen/common_measure_34dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="通话记录详情"
                android:background="@drawable/details_clicked" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_record_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_measure_18dp"
            android:layout_marginTop="@dimen/common_measure_35dp"
            android:layout_toLeftOf="@+id/ll_record_item_details"
            android:text="08:09"
            android:textColor="#989898"
            android:textSize="@dimen/common_measure_22sp" />
    </RelativeLayout>

    <include layout="@layout/divider" />

</LinearLayout>