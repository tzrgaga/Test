<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_104dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_46dp" >

            <TextView
                android:id="@+id/tv_msg_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_measure_30dp"
                android:text="10086"
                android:textColor="#333333"
                android:textSize="@dimen/common_measure_28sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_msg_item"
                android:layout_width="@dimen/common_measure_14dp"
                android:layout_height="@dimen/common_measure_22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_measure_14dp"
                android:background="@drawable/gray_arrow" />

            <TextView
                android:id="@+id/tv_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_measure_14dp"
                android:layout_toLeftOf="@id/iv_msg_item"
                android:text="08:37"
                android:textColor="#989898" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_msg_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_30dp"
            android:layout_marginRight="@dimen/common_measure_42dp"
            android:text="尊敬的用户，你说拨打的客户已启用来电提醒功能，我们将会以短信的形式告知，请挂机"
            android:textColor="#989898"
            android:textSize="@dimen/common_measure_22sp" />
    </LinearLayout>

    <include layout="@layout/divider" />

</LinearLayout>