<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_86dp" >

        <TextView
            android:id="@+id/tv_dialog_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_36dp"
            android:layout_marginTop="@dimen/common_measure_26dp"
            android:text="设置"
            android:textColor="#a2a2a2"
            android:textSize="@dimen/common_measure_28sp" />

        <include layout="@layout/divider" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dialog_setting_is_enable_yd_incomming_call"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_86dp" >

        <TextView
            android:id="@+id/tv_dialog_setting_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_36dp"
            android:layout_marginTop="@dimen/common_measure_26dp"
            android:text="使用永德来电界面"
            android:textColor="#111111"
            android:textSize="@dimen/common_measure_26sp" />

        <CheckBox
            android:id="@+id/cb_setting_is_enable_yd_incomming_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_measure_30dp"
            android:layout_marginTop="@dimen/common_measure_20dp"
            android:background="@drawable/is_enable_yd_incomming_call_selector"
            android:button="@null"
            android:clickable="false" />

        <include layout="@layout/divider" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dialog_setting_import_from_simcard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_86dp" >

        <TextView
            android:id="@+id/tv_dialog_setting_import_from_simcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_36dp"
            android:layout_marginTop="@dimen/common_measure_26dp"
            android:text="从SIM卡导入联系人"
            android:textColor="#111111"
            android:textSize="@dimen/common_measure_26sp" />

        <include layout="@layout/divider" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dialog_setting_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_86dp" >

      <TextView
            android:id="@+id/tv_dialog_setting_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_36dp"
            android:layout_marginTop="@dimen/common_measure_26dp"
            android:text="取消"
            android:textColor="#111111"
            android:textSize="@dimen/common_measure_26sp" />

        <include layout="@layout/divider" />
    </RelativeLayout>

</LinearLayout>