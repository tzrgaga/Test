<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_keyboard_item_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_74dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_keyboard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_30dp"
            android:text="晓晓"
            android:textColor="#333333"
            android:textSize="@dimen/common_measure_28sp" />

        <TextView
            android:id="@+id/tv_keyboard_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:text="13102023055"
            android:textColor="#333333"
            android:textSize="@dimen/common_measure_28sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <include layout="@layout/divider" />
    </RelativeLayout>

</LinearLayout>