<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300.0dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:background="@drawable/dialog_bg"
     >

    <TextView
        android:id="@+id/textv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/relayout_addview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dp"
        android:layout_marginRight="15.0dp"
        android:layout_marginTop="10.0dp"
        android:gravity="center"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dp"
        android:layout_marginTop="10.0dp"
         >
		<Button
            android:id="@+id/btn_cancel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="取消"
            android:background="@drawable/buttonstyle_left"
            android:textColor="@color/black" />
      

        
  		<Button
            android:id="@+id/btn_confir"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="确认"
            android:background="@drawable/buttonstyle_right"
            android:textColor="@color/black" />
        
    </LinearLayout>

</LinearLayout>