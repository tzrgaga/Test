<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/divider" />

    <LinearLayout
        android:id="@+id/ll_chat_msg_send"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_72dp"
        android:layout_alignParentBottom="true"
        android:background="#f0f0f0"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_send_photo"
            android:layout_width="@dimen/common_measure_42dp"
            android:layout_height="@dimen/common_measure_42dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_measure_10dp"
            android:background="@anim/xml_photo" />

        <EditText
            android:layout_width="@dimen/common_measure_350dp"
            android:layout_height="@dimen/common_measure_48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_measure_10dp"
            android:background="@drawable/send_input"
            android:hint="短信/彩信"
            android:paddingLeft="@dimen/common_measure_10dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_send_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_measure_12dp"
            android:text="发送"
            android:textColor="#747474"
            android:textSize="@dimen/common_measure_25sp" />
    </LinearLayout>

</LinearLayout>